/*-----QGroupBox-----*/
QGroupBox {
    background-color: transparent;
    border: 2px;
    border-style: solid;
    border-color: #040568 ;
    border-radius: 10px;
    margin-left: 5px;
    font-weight: bold;
/*    padding-top: 40px*/
/*  spacing: 55px;   macht nix...wird wohl vom layout gesteuert....*/

}

QGroupBox::title {
    color: #040568;
    background-color: transparent;
    subcontrol-origin: content;
    subcontrol-position: top center;  /*position at the top center*/
}

